<h1>Log In</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :name %><br>
    <%= text_field_tag :name %>
  </div>
  <div class="clearfix">
          <%= label_tag :email %>
          <div class="input">
            <%= text_field_tag :email, params[:email], :class => 'field' %>
          </div>
        </div>
    <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in", :class => "btn btn-success btn-xs"%></div>
  <% end %>
