<!DOCTYPE html>
<html>
<head>
  <title>Stripe</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <nav class="navbar navbar-inverse fixed navbar-custom" role="navigation">
    <div class="container">
      <ul class="nav navbar-nav title">
        <% if current_user %>
          <li><%= link_to "Log out", logout_path %></li>
          <li><a>Logged in as <%= current_user.name %></a></li>
          <li><%= link_to "Edit Profile", edit_user_path %></li>
        <% else %>
          <li><%= link_to "Sign Up", signup_path %></li>
          <li><%= link_to "Log In", login_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
<body>
  <div class="container">
    <%= flash[:notice] %>
    <%= yield %><br/>
  </div>
</body>
</html>
